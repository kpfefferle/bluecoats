  <label
    class="text-sm font-medium text-gray-900"
    for="fit-all"
  >
    Fit all seasons
  </label>
  <input
    {{on "change" this.onChangeFitAllSeasons}}
    checked={{@fitAllSeasons}}
    class="focus:ring-blue-600 w-4 h-4 text-blue-600 border-gray-300 rounded"
    id="fit-all"
    type="checkbox"
  >
</div>